        debugger;
        
            $.ajax({
                url: '@Url.Action("StudentDetails","Student")',
                type: 'POST',
                dataType: 'json',
                data: { id: id },
                success: function (datarequest) {
                    debugger;
                    console.log(datarequest);
                    debugger;
                    console.log(datarequest.studentId);
                    $('#myModal').modal('toggle');
