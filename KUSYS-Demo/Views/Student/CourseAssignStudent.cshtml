@model Student
@{
    ViewData["Title"] = "CourseAssignStudent";
}

<div class="card-header border-0">
  
</div>
@using (Html.BeginForm("CourseAssignStudent", "Student", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Student Course Assignment </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Student Id</label>
                        @Html.TextBoxFor(x => x.StudentId, new { @class = "form-control" , @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" , @readonly = true})
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>Birthday</label>
                        @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" , @readonly = true})
                    </div>

                     <div class="form-group">
                        <label>Courses</label>
                         @Html.DropDownList("CourseIds", ViewBag.Courses, null, new { @class = "form-control", @multiple = "multiple" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                  
                </form>
            </div>
        </div>
    </div>
}