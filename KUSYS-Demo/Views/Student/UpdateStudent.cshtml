@model Student

@{
    ViewData["Title"] = "UpdateStudent";
}

<div class="card-header border-0">
    <h3 class="mb-0">Student Editing</h3>
</div>
@using (Html.BeginForm("UpdateStudent", "Student", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Edit Panel</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Students Id</label>
                        <br/>
                        @Html.TextBoxFor(x => x.StudentId, new { @class = "form-control", @readonly = "true" })
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FirstName)
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.LastName)
                    </div>
                    <div class="form-group">
                        <label>Birthday</label>
                        <input class="form-control" asp-for="BirthDate" asp-format="{0:yyyy-MM-dd}"/>
                        @Html.ValidationMessageFor(x => x.BirthDate)
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Update</button>

                </form>
            </div>
        </div>
    </div>
}